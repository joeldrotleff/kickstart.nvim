# Background and transparency settings
background = #101010
background-opacity = 0.85
background-blur-radius = 40

# Window styling for better aesthetics with transparency
window-padding-balance = true
macos-titlebar-style = transparent

# Font configuration
font-family = Liga SFMono Nerd Font
font-family-bold = Liga SFMono Bold Nerd Font
font-family-italic = Liga SFMono Italic Nerd Font
font-size = 15

# Window behavior
resize-overlay = never

# Keybindings
# Split operations
# Use 'auto' to split along the larger direction (similar to Kitty's automatic behavior)
keybind = cmd+enter=new_split:auto

# Close surface with a different keybinding to avoid Neovim conflict
# Using cmd+w instead of ctrl+d
keybind = cmd+w=close_surface

# Split navigation
# Note: ctrl+{ and ctrl+} might need to be ctrl+shift+[ and ctrl+shift+]
keybind = ctrl+shift+[=goto_split:previous
keybind = ctrl+shift+]=goto_split:next

# Tab operations
keybind = cmd+t=new_tab
keybind = ctrl+tab=next_tab

theme = dark:Darkside,light:catppuccin-latte
