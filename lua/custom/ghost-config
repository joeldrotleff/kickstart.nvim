background-opacity = 0.8
background-blur-radius = 50

# Window styling for better aesthetics with transparency
window-padding-balance = true
macos-titlebar-style = transparent

# Font configuration
font-family = Liga SFMono Nerd Font
font-family-bold = Liga SFMono Bold Nerd Font
font-family-italic = Liga SFMono Italic Nerd Font
font-size = 15

# Window behavior
resize-overlay = never

# Keybindings
# Split operations
# Always create a vertical split (below) for cmd+enter
keybind = cmd+enter=new_split:down

# Close surface with a different keybinding to avoid Neovim conflict
# Using cmd+w instead of ctrl+d
keybind = cmd+w=close_surface

# Split navigation
# Note: ctrl+{ and ctrl+} might need to be ctrl+shift+[ and ctrl+shift+]
keybind = ctrl+shift+[=goto_split:previous
keybind = ctrl+shift+]=goto_split:next

# Tab operations
keybind = cmd+t=new_tab
keybind = ctrl+tab=next_tab

theme = dark:rose-pine,light:catppuccin-latte

# Set cursor to icy blue color
cursor-color = #87CEEB
# Vesper
# Rosepine
# Kanagawa Dragon
# embers-dark
# Espresso Libre

# Performance optimizations
# Scrollback buffer limit (10MB - adjust as needed)
scrollback-limit = 10485760

# Disable vsync for maximum performance (already default on macOS)
# vsync = false


# Disable shader animations to reduce GPU load
custom-shader-animation = false
keybind = shift+enter=text:\n
keybind = shift+enter=text:\n
